<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_mercado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imagen_mercado"
            android:contentDescription="@string/imgmercado"
            android:background="@drawable/regtangle_imge"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_background"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreMercado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_de_mercado"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/nombreDistrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del distrito"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombreProvicia"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="NomProvincia"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="-"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/nombreRegion"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:text="nomRegion"
                    android:textAlignment="textStart"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:textSize="18sp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/nroCelularMercado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÃºmero de celular"
                    android:textAlignment="center"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>